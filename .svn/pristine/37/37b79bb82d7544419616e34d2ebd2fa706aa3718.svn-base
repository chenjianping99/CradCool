package com.jiubang.goscreenlock.theme.cjpcardcool.calendar;

import java.util.Calendar;

/**
 * 
 * <br>类描述:日期常量
 * 
 * @date  [2013-1-5]
 */
public class DateConstants
{
	public final static int	MAX_HOUR_OF_DAY;
	public final static int	MAX_MINUTE;
	public final static int	MAX_SECOND;
	public final static int	MAX_MILLISECOND;

	public final static int	MIN_HOUR_OF_DAY;
	public final static int	MIN_MINUTE;
	public final static int	MIN_SECOND;
	public final static int	MIN_MILLISECOND;

	static
	{
		Calendar calendar = Calendar.getInstance();
		MAX_HOUR_OF_DAY = calendar.getActualMaximum(Calendar.HOUR_OF_DAY);
		MAX_MINUTE = calendar.getActualMaximum(Calendar.MINUTE);
		MAX_SECOND = calendar.getActualMaximum(Calendar.SECOND);
		MAX_MILLISECOND = calendar.getActualMaximum(Calendar.MILLISECOND);

		MIN_HOUR_OF_DAY = calendar.getActualMinimum(Calendar.HOUR_OF_DAY);
		MIN_MINUTE = calendar.getActualMinimum(Calendar.MINUTE);
		MIN_SECOND = calendar.getActualMinimum(Calendar.SECOND);
		MIN_MILLISECOND = calendar.getActualMinimum(Calendar.MILLISECOND);
	}
}
